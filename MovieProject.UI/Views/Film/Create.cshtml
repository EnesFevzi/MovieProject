@model FilmAddDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Create" asp-controller="Film">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Film Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Film Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ReleaseDate">Vizyon Tarihi Giriniz</label>
                                <input type="date" class="form-control" asp-for="ReleaseDate">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryId">Kategori Seçiniz</label>
                                <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"CategoryId","Name"))">
                                    <option value="">-- Kategori Seçiniz --</option>
                                </select>
                            </div>
                        </div>
                        @* <div class="card-body">
                            <div class="form-group">
                                <label for="ActorId">Aktör Seçiniz</label>
                                <select class="form-control" asp-for="ActorId" asp-items="@(new SelectList(ViewBag.ActorList, "ActorId", "Name"))">
                                    <option value="">-- Aktör Seçiniz --</option>
                                </select>
                            </div>
                        </div> *@
                        <div class="card-action">
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
