@model FilmUpdateDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Update" asp-controller="Film">
                    <div class="card">
                        <input type="hidden" asp-for="FilmId"/>
                        <div class="card-header">
                            <div class="card-title">Film Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Film Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="ReleaseDate" for="defaultFormControlInput" class="form-label">Başlangıç Tarihi</label>
                                <input asp-for="ReleaseDate" type="date" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen başlık giriniz." aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryId">Kategori Seçiniz</label>
                                <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"CategoryId","Name"))">
                                    <option value="">-- Kategori Seçiniz --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label text-right">Ekstra Malzemeler:</label>
                            <div class="form-check">
                                @foreach (var extra in Model.Actors)
                                {
                                    <div class="form-check">
                                        <input type="checkbox" id="extra-@extra.ActorId" class="form-check-input" name="SelectedActors" value="@extra.ActorId" @(Model.SelectedActors != null && Model.SelectedActors.Contains(extra.ActorId) ? "checked" : "")>
                                        <label for="extra-@extra.ActorId" class="form-check-label">@extra.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                        @* <div class="card-body">
                        <div class="form-group">
                        <label for="ActorId">Aktör Seçiniz</label>
                        <select class="form-control" asp-for="ActorId" asp-items="@(new SelectList(ViewBag.ActorList, "ActorId", "Name"))">
                        <option value="">-- Aktör Seçiniz --</option>
                        </select>
                        </div>
                        </div> *@
                        <div class="card-action">
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
