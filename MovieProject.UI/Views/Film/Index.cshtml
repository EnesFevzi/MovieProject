 @model List<ResultFilmDto>

<table id="hospitalTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Film Adı</th>
            <th>Çıkış Tarihi</th>
            <th>Kategorisi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.ReleaseDate</td>
                <td>@item.Category.Name</td>
                <td><a asp-action="Update" asp-controller="Film" asp-route-id="@item.FilmId" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</a></td>
                <td><a asp-action="Delete" asp-controller="Film" asp-route-id="@item.FilmId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Film" class="btn mb-1 btn-rounded btn-outline-info">Yeni Film Ekle</a>


