@model ActorAddDto
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Aktör İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Update" asp-controller="Actor">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Aktör Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Aktör Adı</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>