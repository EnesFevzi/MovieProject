@model List<ResultActorDto>

<table id="hospitalTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Aktör Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><a asp-action="Update" asp-controller="Actor" asp-route-id="@item.ActorId" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</a></td>
                <td><a asp-action="Delete" asp-controller="Actor" asp-route-id="@item.ActorId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Actor" class="btn mb-1 btn-rounded btn-outline-info">Yeni Aktör Ekle</a>


